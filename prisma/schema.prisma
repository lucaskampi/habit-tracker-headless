generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum FrequencyType {
  DAILY
  WEEKLY
  CUSTOM
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  habits    Habit[]
  createdAt DateTime @default(now())
}

model Habit {
  id             String        @id @default(cuid())
  user           User          @relation(fields: [userId], references: [id])
  userId         String
  title          String
  description    String?
  frequencyType  FrequencyType
  // frequencySpec stores flexible scheduling info, e.g. { daysOfWeek: [1,3,5] } or { interval: 2 }
  frequencySpec  Json
  goal           Int           @default(1)
  // optional color or metadata for frontend
  metadata       Json?
  completions    HabitCompletion[]
  createdAt      DateTime      @default(now())
}

model HabitCompletion {
  id        String   @id @default(cuid())
  habit     Habit    @relation(fields: [habitId], references: [id])
  habitId   String
  date      DateTime // store UTC date for the completion day (truncate to date on writes)
  count     Int      @default(1)
  createdAt DateTime @default(now())

  @@unique([habitId, date])
}
